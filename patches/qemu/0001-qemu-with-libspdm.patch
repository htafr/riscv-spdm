+boolean spdm_measurement_collection(IN uint8 measurement_specification,
+           IN uint32 measurement_hash_algo,
+           OUT uint8 *device_measurement_count,
+           OUT void *device_measurement,
+           IN OUT uintn *device_measurement_size)
